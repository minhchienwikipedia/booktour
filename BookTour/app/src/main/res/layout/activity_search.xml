<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.minhchien.fithou.booktour.mActivity.SearchActivity">
    <LinearLayout
        android:id="@+id/Search"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout

        android:weightSum="3"

        android:background="@color/primary"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <EditText

            android:background="#fff"
            android:layout_weight="1"
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nhập địa điểm cần tìm"/>
        <LinearLayout
            android:padding="5dp"
            android:layout_weight="2"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button

                android:layout_weight="1"
                android:background="@drawable/ic_highlight"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/btnCancel"/>
            <Button
                android:padding="10dp"
                android:layout_weight="1"
                android:background="@drawable/ic_search"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/btnSearch"/>
            <Button
                android:layout_weight="1"
                android:background="@drawable/ic_swap_vert_black_24dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/btnSort"/>
            <Button
                android:layout_weight="1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/btnBack"
                android:background="@drawable/ic_reply_black_24dp" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

    <ListView
        android:dividerHeight="10dp"
        android:divider="#f1f1f1"
        android:layout_below="@+id/Search"
        android:id="@+id/lvSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</RelativeLayout>
